# ===========================================
# CODE REVIEW AGENT CONFIGURATION
# ===========================================

# Server Configuration
PORT=3000
NODE_ENV=development
WEBHOOK_URL=http://localhost:3000/webhook/github
ALLOWED_ORIGINS=*

# ===========================================
# GITHUB CONFIGURATION
# ===========================================
# GitHub Personal Access Token with repo permissions
GITHUB_TOKEN=your_github_token_here

# GitHub Webhook Secret (optional but recommended)
GITHUB_WEBHOOK_SECRET=your_webhook_secret_here

# GitHub App Configuration (alternative to PAT)
# GITHUB_APP_ID=your_app_id
# GITHUB_PRIVATE_KEY=your_private_key_here

# ===========================================
# GEMINI AI CONFIGURATION
# ===========================================
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Gemini model to use
GEMINI_MODEL=gemini-2.0-flash-exp

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# MongoDB connection string
MONGODB_URI=mongodb://localhost:27017/code-review-agent

# ===========================================
# REVIEW CONFIGURATION
# ===========================================
# Maximum number of files to review per PR
MAX_FILES_PER_PR=50

# Maximum diff size per file (in bytes)
MAX_DIFF_SIZE=100000

# Review timeout (in milliseconds)
REVIEW_TIMEOUT=300000

# ===========================================
# REVIEW CRITERIA (true/false)
# ===========================================
CHECK_SECURITY=true
CHECK_PERFORMANCE=true
CHECK_READABILITY=true
CHECK_BEST_PRACTICES=true
CHECK_TESTING=true
CHECK_DOCUMENTATION=true

# ===========================================
# RATE LIMITING
# ===========================================
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# ===========================================
# LOGGING
# ===========================================
LOG_LEVEL=info
LOG_FORMAT=combined
